<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <application
        android:name=".IMApplication"
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/icon_launcher"
        android:label="@string/app_name"
        android:networkSecurityConfig="@xml/net_config"
        android:requestLegacyExternalStorage="true"
        android:roundIcon="@mipmap/icon_launcher"
        android:supportsRtl="true"
        android:theme="@style/ThemeDefault"
        android:usesCleartextTraffic="true"
        tools:targetApi="31">

        <meta-data
            android:name="ScopedStorage"
            android:value="true" />

        <activity android:name=".ui.welcome.WelcomeActivity"
            android:exported="true"
            android:theme="@style/splash"
            android:icon="@mipmap/icon_launcher"
            android:label="@string/app_name"
            android:screenOrientation="portrait">

            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>

            <meta-data
                android:name="android.app.lib_name"
                android:value="" />
        </activity>

        <activity
            android:name=".ui.main.MainActivity"
            android:exported="true"
            android:icon="@mipmap/icon_launcher"
            android:label="@string/app_name"
            android:screenOrientation="portrait">
        </activity>

        <activity
            android:name=".ui.search.SearchActivity"
            android:exported="true"
            android:icon="@mipmap/icon_launcher"
            android:label="@string/app_name"
            android:screenOrientation="portrait">
        </activity>

        <activity
            android:name=".ui.user.UserActivity"
            android:exported="true"
            android:icon="@mipmap/icon_launcher"
            android:label="@string/app_name"
            android:screenOrientation="portrait">
        </activity>


        <activity
            android:name=".ui.main.MainTestActivity"
            android:exported="true"
            android:icon="@mipmap/icon_launcher"
            android:label="@string/app_name"
            android:screenOrientation="portrait">
        </activity>

        <activity
            android:name=".SessionActivity"
            android:icon="@mipmap/icon_launcher"
            android:label="@string/app_name"
            android:screenOrientation="portrait" />

        <activity
            android:name=".ui.chat.MessageActivity"
            android:icon="@mipmap/icon_launcher"
            android:label="@string/app_name"
            android:screenOrientation="portrait"
            android:windowSoftInputMode="adjustResize" />

        <activity
            android:name=".WebRtcActivity"
            android:icon="@mipmap/icon_launcher"
            android:label="@string/app_name"
            android:screenOrientation="portrait" />

        <activity
            android:name=".MediaTestActivity"
            android:icon="@mipmap/icon_launcher"
            android:label="@string/app_name"
            android:screenOrientation="portrait" />

        <activity
            android:name=".VideoActivity"
            android:icon="@mipmap/icon_launcher"
            android:label="@string/app_name"
            android:screenOrientation="portrait" />

    </application>

</manifest>