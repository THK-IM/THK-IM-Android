<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:ignore="MissingDefaultResource">

    <include
        android:id="@+id/tb_top"
        layout="@layout/layout_toolbar_main"
        />

    <androidx.appcompat.widget.LinearLayoutCompat
        android:id="@+id/layout_user_info"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="#ffffff"
        android:paddingHorizontal="20dp"
        android:paddingTop="80dp"
        android:paddingBottom="20dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        >
        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/iv_avatar"
            android:layout_width="60dp"
            android:layout_height="60dp"
            />
        <androidx.appcompat.widget.LinearLayoutCompat
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            >
            <androidx.emoji2.widget.EmojiTextView
                android:id="@+id/tv_nickname"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="#000000"
                />
            <androidx.emoji2.widget.EmojiTextView
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="14sp"
                android:textColor="#666666"
                android:text="账户ID:"
                />
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                >
                <androidx.emoji2.widget.EmojiTextView
                    android:id="@+id/tv_id"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="14sp"
                    android:textColor="#666666"
                    />
            </RelativeLayout>
        </androidx.appcompat.widget.LinearLayoutCompat>
    </androidx.appcompat.widget.LinearLayoutCompat>

    <TextView
        android:id="@+id/tv_follow"
        android:visibility="gone"
        app:layout_constraintTop_toBottomOf="@id/layout_user_info"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:textSize="16sp"
        android:textColor="@color/white"
        android:clickable="true"
        android:text="关注"
        android:gravity="center"
        android:textAlignment="center"
        android:layout_marginTop="60dp"
        android:layout_marginHorizontal="30dp"
        android:layout_width="match_parent"
        android:layout_height="40dp" />
    
    <TextView
        android:id="@+id/tv_add_friend"
        android:visibility="gone"
        app:layout_constraintTop_toBottomOf="@id/tv_follow"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:textSize="16sp"
        android:textColor="@color/white"
        android:clickable="true"
        android:text="加为好友"
        android:gravity="center"
        android:textAlignment="center"
        android:layout_marginTop="10dp"
        android:layout_marginHorizontal="30dp"
        android:layout_width="match_parent"
        android:layout_height="40dp" />

    <TextView
        android:id="@+id/tv_send_msg"
        android:visibility="gone"
        app:layout_constraintTop_toBottomOf="@id/tv_add_friend"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:textSize="16sp"
        android:textColor="@color/white"
        android:clickable="true"
        android:text="发送消息"
        android:gravity="center"
        android:textAlignment="center"
        android:layout_marginTop="10dp"
        android:layout_marginHorizontal="30dp"
        android:layout_width="match_parent"
        android:layout_height="40dp" />

</androidx.constraintlayout.widget.ConstraintLayout>