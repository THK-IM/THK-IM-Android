<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <androidx.cardview.widget.CardView
        android:id="@+id/card_other"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_marginTop="100dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:cardCornerRadius="6dp"
        app:cardElevation="0dp"
        app:cardMaxElevation="0dp"
        >
        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/iv_other"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            />
    </androidx.cardview.widget.CardView>

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tv_other"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toBottomOf="@id/card_other"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tv_request_call_desc"
        app:layout_constraintTop_toBottomOf="@id/tv_other"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="100dp"
        />
    <androidx.appcompat.widget.LinearLayoutCompat
        android:id="@+id/ll_opr_camera"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_marginTop="80dp"
        app:layout_constraintTop_toBottomOf="@id/tv_request_call_desc"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        >
        <androidx.appcompat.widget.LinearLayoutCompat
            android:gravity="center"
            android:background="@drawable/shape_black_oval"
            android:layout_width="60dp"
            android:layout_height="60dp">
            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/iv_switch_camera"
                android:src="@drawable/ic_switch_camera"
                android:layout_width="36dp"
                android:layout_height="36dp"/>
        </androidx.appcompat.widget.LinearLayoutCompat>
        <View
            android:layout_width="100dp"
            android:layout_height="60dp"/>
        <androidx.appcompat.widget.LinearLayoutCompat
            android:gravity="center"
            android:background="@drawable/shape_black_oval"
            android:layout_width="60dp"
            android:layout_height="60dp">
            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/iv_open_close_camera"
                android:src="@drawable/selector_camera_on_off"
                android:layout_width="36dp"
                android:layout_height="36dp"
                />
        </androidx.appcompat.widget.LinearLayoutCompat>

    </androidx.appcompat.widget.LinearLayoutCompat>

    <androidx.appcompat.widget.LinearLayoutCompat
        android:id="@+id/ll_call_opr"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_marginTop="60dp"
        app:layout_constraintTop_toBottomOf="@id/ll_opr_camera"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        >
        <androidx.appcompat.widget.LinearLayoutCompat
            android:gravity="center"
            android:background="@drawable/shape_black_oval"
            android:layout_width="60dp"
            android:layout_height="60dp">
            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/iv_hangup"
                android:src="@drawable/ic_call_hangup"
                android:layout_width="36dp"
                android:layout_height="36dp"/>
        </androidx.appcompat.widget.LinearLayoutCompat>
        <View
            android:layout_width="200dp"
            android:layout_height="60dp"/>
        <androidx.appcompat.widget.LinearLayoutCompat
            android:gravity="center"
            android:background="@drawable/shape_black_oval"
            android:layout_width="60dp"
            android:layout_height="60dp">
            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/iv_accept"
                android:src="@drawable/ic_call_accept"
                android:layout_width="36dp"
                android:layout_height="36dp"
                />
        </androidx.appcompat.widget.LinearLayoutCompat>

    </androidx.appcompat.widget.LinearLayoutCompat>


</androidx.constraintlayout.widget.ConstraintLayout>