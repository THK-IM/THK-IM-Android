<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.appcompat.widget.LinearLayoutCompat
        android:id="@+id/ll_opr_camera"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/iv_switch_camera"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:background="@drawable/shape_black_oval"
            android:padding="12dp"
            android:src="@drawable/ic_switch_camera" />

        <View
            android:layout_width="100dp"
            android:layout_height="60dp" />

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/iv_open_close_camera"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:background="@drawable/shape_black_oval"
            android:padding="12dp"
            android:src="@drawable/selector_camera_on_off" />

    </androidx.appcompat.widget.LinearLayoutCompat>

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/iv_hangup"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_marginTop="60dp"
        android:src="@drawable/ic_call_hangup"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/ll_opr_camera" />

</androidx.constraintlayout.widget.ConstraintLayout>