<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="160dp"
    android:layout_height="240dp">

    <org.webrtc.SurfaceViewRenderer
        android:id="@+id/rtc_renderer_video"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>

    <TextView
        android:id="@+id/tv_uid"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="#40000000"
        android:textColor="@color/white"
        android:textSize="16dp"
        app:layout_constraintLeft_toLeftOf="@id/rtc_renderer_video"
        app:layout_constraintTop_toTopOf="@id/rtc_renderer_video" />

    <ImageButton
        android:id="@+id/btn_video_muted"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:src="@drawable/selector_video_muted"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        />

    <ImageButton
        android:id="@+id/btn_audio_muted"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:src="@drawable/selector_audio_muted"
        app:layout_constraintRight_toLeftOf="@id/btn_video_muted"
        app:layout_constraintBottom_toBottomOf="parent"
        />

</androidx.constraintlayout.widget.ConstraintLayout>