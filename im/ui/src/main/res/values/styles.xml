<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- 底部dialog进出动画 -->
    <style name="BottomSheetStyle" parent="@style/Dialog_full">
        <item name="android:windowAnimationStyle">@style/BottomDialogAnimation</item>
    </style>

    <!-- 底部dialog进出动画 -->
    <style name="BottomDialogAnimation" parent="@android:style/Animation.Dialog">
        <item name="android:windowEnterAnimation">@anim/dialog_bottom_in</item>
        <item name="android:windowExitAnimation">@anim/dialog_bottom_out</item>
    </style>
    <!-- 顶部pop进出动画 -->

    <!--宽度和屏幕一致dialog-->
    <style name="Dialog_full">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowFrame">@null</item>            <!--是否有边框-->
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsFloating">true</item>         <!--是否浮现在activity之上-->
        <item name="android:windowIsTranslucent">true</item>       <!--是否半透明-->
        <item name="android:windowContentOverlay">@null</item>      <!--是否有遮盖-->
        <item name="android:windowAnimationStyle">@android:style/Animation.Dialog</item>
        <item name="android:windowFullscreen">true</item>
        <item name="android:backgroundDimEnabled">true</item>        <!--背景是否模糊显示-->
    </style>


    <style name="SoundVolumeStyle" parent="@android:style/Theme.Dialog">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:backgroundDimEnabled">false</item>
    </style>


</resources>
